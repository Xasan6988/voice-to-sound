{
  "name": "voice-to-sound",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "build:db": "bash ./bash/buildDB.bash",
    "run:db:dev": "cross-env NODE_ENV=development bash ./bash/runDB.bash",
    "run:db:prod": "cross-env NODE_ENV=production bash ./bash/runDB.bash",
    "test": "jest",
    "prebuild": "rm -rf ./dist",
    "build": "tsc",
    "dev": "cross-env NODE_ENV=development nodemon ./src/bot.ts",
    "dev:prod": "cross-env NODE_ENV=production nodemon ./src/bot.ts",
    "start": "npm run prebuild && npm run build && cross-env NODE_ENV=production node ./dist/bot.js",
    "start:pm2": "npm run prebuild && npm run build && pm2 start dist/bot.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.2",
    "dotenv-cli": "^10.0.0",
    "dotenv-expand": "^12.0.3",
    "fluent-ffmpeg": "^2.1.3",
    "jest": "^30.1.3",
    "prisma": "^6.16.2",
    "telegraf": "^4.4.2",
    "ts-jest": "^29.4.1"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "nodemon": "^3.1.10"
  }
}
